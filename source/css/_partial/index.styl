/*! index layout */
#container
  width 95%
  margin 0 auto
  @media mini
    width 96%
  @media tablet
    width 94%
  @media desktop
    width 82%

#main
  margin 1em 0 0
  font-size 87.5%
  line-height line-height+0.3
  box-shadow boxshadow
  background #fff
  h1
    font-weight bolder
  @media tablet
    margin 2em 0 0
    width 75%
    float left
    transition margin 0.5s ease-out
  section.post
    //box-shadow boxshadow

    padding 0.2em 0.8em 0.1em
    @media mini
      padding 1.2em 1.5em 0.1em
    article
      background-color color-white
      background-image url(../img/dots-2x.png)
      background-position left bottom
      background-repeat repeat-x
      background-size 5px auto
      padding 0 0 0.4em 0
      @media mini
          padding 0 0 0.8em 0
    a
      //display block
      transition all 0.45s
      &:hover
        //box-shadow 0 0 5px rgba(0,0,0,0.6)
      &:hover  h1{
        color color-theme
        transition all 0.5s ease-in-out
      }
      h1
        color color-blue
      p
        color color-font
      time
        color color-font
        display block
        margin 0.5em 0
        font-size 0.5em
    .article-more-link
      font-size 0.875em
      overflow hidden
      a
        float right
.moveMain
  margin-left 10% !important

#page-nav
  background color-white
  text-align center
  overflow hidden
  padding 0.6em 0
  a, span
    display inline-block
    padding 0.5em 1em
  a
    color color-blue
    &:hover
      background color-gray
      color color-theme
  .prev
    float left
    // border-left 0.5em solid color-gray
    transition all .5s
    &:hover
      border-left 0.5em solid color-theme
  .next
    float right
    // border-right 0.5em solid color-gray
    transition all .5s
    &:hover
      border-right 0.5em solid color-theme
  .page-number
    display none
    padding 0.3em 0.9em
    margin-right 0.3em
    border-radius 4px
    @media mini
      display inline-block
  .current
    color darken(color-gray,10%)
    background rgba(55, 58, 65, 0.0470588)
  .space
    color color-blue

/*! page layout */
.page
  @media tablet
    margin-left 10% !important

/*! archive layout */
.category-icon:before,.tag-icon:before,.archive-icon:before
  font-family font-icon-family
  font-smoothing()
  color color-gray
  font-size font-size
  padding-right 0.3em

.category-icon:before
  content "\f07b"

.tag-icon:before
  content "\f02c"

.archive-icon:before
  content "\f187"

.archive-title
  margin 1em 0
  width 97%
  padding 2em 0 2em 3%
  box-shadow boxshadow
  @media tablet
    margin 2em 0
    width 18.5%
    padding-left 0.5%
    float left
  background color-section
  h2
    width 90%
    color color-blue
    font-size font-size+20
  a
    color color-blue
    transition color .5s
    &:hover
      color color-theme
      transition color .5s
.current
  color color-theme !important

